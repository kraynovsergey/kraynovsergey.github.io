							.reviews__item-title Екатерина Олькина
							.reviews__item-date 02.02.2022

			.reviews__controls-wrap
				.carousel-controls.reviews__controls
					button.carousel-controls__btn._prev(data-controls="prev")
						svg(width="53" height="24" viewBox="0 0 53 24" fill="none" xmlns="http://www.w3.org/2000/svg")
							use(xlink:href="#arrow")
					button.carousel-controls__btn._next(data-controls="next")
						svg(width="53" height="24" viewBox="0 0 53 24" fill="none" xmlns="http://www.w3.org/2000/svg")
							use(xlink:href="#arrow")

	svg.reviews__wave(width="165" height="89" viewBox="0 0 165 89" fill="none" xmlns="http://www.w3.org/2000/svg")
		use(xlink:href="#wave-grey")
